<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/padding_35dp"
    android:paddingStart="@dimen/padding_15dp"
    android:paddingEnd="@dimen/padding_20dp"
    android:paddingBottom="@dimen/padding_15dp">

  <TextView
      style="@style/home_tile_title_enabled"
      android:id="@+id/tileTitle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/tile_gesture_title" />

  <TextView
      style="@style/home_tile_subtitle_enabled"
      android:id="@+id/tileSubTitle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/tileTitle"
      android:text="@string/tile_gesture_subtitle"
      android:layout_marginTop="@dimen/margin_5dp"/>
</RelativeLayout>