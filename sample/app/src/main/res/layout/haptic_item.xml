<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="80dp"
  android:background="?android:attr/selectableItemBackground">
  <ImageView
    android:id="@+id/haptic_icon_iv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="26dp"
    android:layout_marginTop="20dp"
    android:layout_alignParentStart="true"
    android:src="@drawable/haptics_icon"/>

  <TextView
    style="@style/HapticsItem"
    android:id="@+id/haptic_pattern_tv"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="36dp"
    android:layout_toRightOf="@+id/haptic_icon_iv"
    android:gravity="center_vertical"
    android:text="@string/haptic_item_gesture_pattern"/>

  <ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentEnd="true"
    android:layout_marginEnd="28dp"
    android:layout_marginTop="28dp"
    android:src="@drawable/play_circle_filled_24px"/>

  <View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_marginTop="31dp"
    android:layout_marginStart="102dp"
    android:layout_alignBottom="@+id/haptic_pattern_tv"
    android:background="#E5E5E5"/>

</RelativeLayout>