<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:orientation="vertical">

  <androidx.appcompat.widget.Toolbar
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/toolbar_height"
    android:fitsSystemWindows="true"
    android:theme="@style/ToolbarTheme"
    app:navigationIcon="@drawable/ic_chevron_left_24px" />

  <TextView
    android:id="@+id/title"
    style="@style/MusicalThreads"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="24dp"
    android:paddingBottom="20dp"
    android:paddingStart="24dp"
    android:paddingEnd="24dp"
    android:text="@string/musical_threads_title" />

  <TextView
    style="@style/MusicalThreadsSubtitle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="33dp"
    android:paddingStart="24dp"
    android:paddingEnd="24dp"
      android:layout_marginBottom="26dp"
    android:text="@string/musical_threads_subtitle" />
  
  <include
    layout="@layout/threads"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center" />

</LinearLayout>
