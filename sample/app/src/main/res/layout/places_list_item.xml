<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:map="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_marginBottom="18dp"
  android:paddingTop="24dp"
  android:paddingStart="24dp"
  android:paddingEnd="24dp"
  android:orientation="vertical">
  <com.google.android.gms.maps.MapView
    android:id="@+id/places_map_view"
    android:layout_width="match_parent"
    android:layout_height="152dp"
    android:background="@drawable/round_corner_places"
    map:cameraZoom="13"
    map:liteMode="true"
    map:mapType="normal" />
  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="17dp"
    android:orientation="horizontal">
    <ImageView
      android:id="@+id/item_more_options"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:focusable="true"
      android:layout_alignParentEnd="true"
      android:src="@drawable/ic_more" />
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginEnd="24dp"
      android:layout_alignParentStart="true"
      android:orientation="vertical">
      <TextView
        android:id="@+id/place_name"
        style="@style/ApiTile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lineSpacingExtra="5sp"
        android:maxLines="1"
        android:textColor="@color/black" />

      <TextView
        android:id="@+id/place_address"
        style="@style/LedSubtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/grey_600" />
      <TextView
        android:id="@+id/place_time"
        style="@style/GestureOverviewListItemSubtitleTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="10:10 AM"
        android:textAllCaps="true"
        android:fontFamily="sans-serif-medium"
        />
    </LinearLayout>
  </RelativeLayout>
</LinearLayout>