<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
    <item name="colorControlNormal">#000000</item>
  </style>

  <style name="ThreadsVisualizerLine">
    <item name="android:layout_marginStart">-20dp</item>
    <item name="android:layout_marginEnd">-20dp</item>
    <item name="android:layout_weight">100</item>
    <item name="android:layerType">software</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">23dp</item>
    <item name="android:alpha">1.0</item>
    <item name="android:background">@drawable/thread_line</item>
  </style>

  <style name="ThreadsVisualizerLine50" parent="ThreadsVisualizerLine">
    <item name="android:alpha">0.5</item>
  </style>

  <style name="ThreadsVisualizerLine40" parent="ThreadsVisualizerLine">>
    <item name="android:alpha">0.4</item>
  </style>

  <style name="ThreadsVisualizerLine30" parent="ThreadsVisualizerLine">>
    <item name="android:alpha">0.3</item>
  </style>

  <style name="ThreadsVisualizerLine20" parent="ThreadsVisualizerLine">>
    <item name="android:alpha">0.2</item>
  </style>

  <style name="ThreadsVisualizerLine10" parent="ThreadsVisualizerLine">>
    <item name="android:alpha">0.1</item>
  </style>

  <style name="General_Title_30sp" parent="@android:style/TextAppearance">
    <item name="android:textSize">@dimen/text_size_30</item>
    <item name="android:textColor">@color/black</item>
  </style>

  <style name="General_subtitle_16sp" parent="@android:style/TextAppearance">
    <item name="android:textSize">@dimen/text_size_16</item>
    <item name="android:textColor">@color/general_subtitle_text_color_grey</item>
  </style>

  <style name="General_subtitle_12sp" parent="@android:style/TextAppearance">
    <item name="android:textSize">@dimen/text_size_12</item>
    <item name="android:textColor">@color/general_subtitle_text_color_grey</item>
  </style>

  <style name="GestureListItemTextStyle" parent="@android:style/TextAppearance">
    <item name="android:textSize">14sp</item>
    <item name="android:textColor">#3A3A3A</item>
  </style>

  <style name="GestureListTitleTextStyle" parent="@android:style/TextAppearance">
    <item name="android:textSize">12sp</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:textColor">#646464</item>
  </style>

  <style name="GestureOverviewListItemTitleTextStyle" parent="@style/TextAppearance.AppCompat.Medium">
    <item name="android:textSize">16sp</item>
    <item name="android:textColor">#3A3A3A</item>
  </style>

  <style name="GestureOverviewListItemSubtitleTextStyle" parent="@android:style/TextAppearance">
    <item name="android:textSize">14sp</item>
    <item name="android:textColor">#646464</item>
  </style>

  <style name="ledPatternNormalText">
    <item name="android:textSize">18sp</item>
    <item name="android:textColor">#3A3A3A</item>
  </style>

  <style name="ScanPairingTitle" parent="@android:style/TextAppearance">
    <item name="android:textSize">18sp</item>
    <item name="android:letterSpacing">0.002</item>
    <item name="android:textColor">@color/scan_page_text</item>
  </style>

  <style name="ScanPairingDesc" parent="@android:style/TextAppearance">
    <item name="android:textSize">16sp</item>
    <item name="android:letterSpacing">0.02</item>
    <item name="android:textColor">@color/scan_page_text</item>
    <item name="android:fontFamily">sans-serif-medium</item>
  </style>

  <style name="listHeaderText" parent="@android:style/TextAppearance">
    <item name="android:textSize">12sp</item>
    <item name="android:letterSpacing">0.05</item>
    <item name="android:textColor">@color/grey_600</item>
  </style>

  <style name="FullWidthButton" parent="Widget.MaterialComponents.Button">
    <item name="android:textSize">20sp</item>
    <item name="android:letterSpacing">0.05</item>
    <item name="android:layout_marginStart">68dp</item>
    <item name="android:layout_marginEnd">68dp</item>
    <item name="android:textColor">@color/white</item>
    <item name="backgroundColor">@color/scan_page_text</item>
    <item name="cornerRadius">30dp</item>
    <item name="android:layout_height">48dp</item>
    <item name="android:textAllCaps">false</item>
  </style>

  <style name="CancelButton" parent="Widget.MaterialComponents.Button">
    <item name="android:textSize">16sp</item>
    <item name="android:letterSpacing">0.025</item>
    <item name="android:layout_marginStart">68dp</item>
    <item name="android:layout_marginEnd">68dp</item>
    <item name="android:textColor">@android:color/black</item>
    <item name="android:padding">0dp</item>
    <item name="android:background">@android:color/transparent</item>
    <item name="android:insetTop">0dp</item>
    <item name="android:insetBottom">0dp</item>
    <item name="android:layout_height">23dp</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:alpha">0.5</item>
  </style>

  <style name="home_tile_subtitle_enabled" parent="@android:style/TextAppearance">
    <item name="android:textSize">@dimen/text_size_14</item>
    <item name="android:textColor">@color/black</item>
    <item name="android:fontFamily">roboto-regular</item>
  </style>

  <style name="home_tile_title_enabled" parent="@android:style/TextAppearance">
    <item name="android:textSize">@dimen/text_size_18</item>
    <item name="android:textColor">@color/black</item>
    <item name="android:fontFamily">roboto-bold</item>
  </style>

  <style name="home_tile_section_enabled" parent="@android:style/TextAppearance">
    <item name="android:textSize">@dimen/text_size_14</item>
    <item name="android:textColor">@color/black</item>
    <item name="android:fontFamily">roboto-regular</item>
  </style>

  <style name="NearByTagsText" parent="@android:style/TextAppearance">
    <item name="android:textSize">12sp</item>
    <item name="android:letterSpacing">0.12</item>
    <item name="android:textColor">@color/grey_600</item>
    <item name="android:fontFamily">sans-serif-medium</item>
  </style>

  <style name="TagManagerText" parent="@android:style/TextAppearance">
    <item name="android:textSize">30sp</item>
    <item name="android:textColor">@color/gray_scale</item>
    <item name="android:fontFamily">sans-serif-medium</item>
  </style>

  <style name="tagDetailItem">
    <item name="android:textSize">16sp</item>
    <item name="android:letterSpacing">0.02</item>
    <item name="android:textColor">#000000</item>
  </style>

  <style name="tagDetailItemValue">
    <item name="android:textSize">12sp</item>
    <item name="android:textColor">#646464</item>
  </style>
</resources>